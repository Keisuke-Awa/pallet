<h1><%= @site.name %></h1>
<div>
  <%= link_to '記事新規作成', new_site_post_url(@site), class: 'btn btn-primary' %>
  <%= link_to 'カテゴリ編集', site_categories_url(@site), class: 'btn btn-success' %>
</div>
<div class="row">
  <% @posts.each do |post| %>
    <div class="col-sm-8">
      <h3><%= post.title %></h3>
      <h4 class="label label-default">test</h4>
      <p><%= post.text %></p>
    </div>
  <% end %>
</div>

